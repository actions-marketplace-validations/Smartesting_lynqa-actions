{
  "name": "@smartesting/lynqa-actions",
  "description": "GitHub Actions to run tests with Lynqa",
  "version": "0.0.0",
  "author": "Smartesting",
  "type": "module",
  "private": true,
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "tsc:watch": "tsc --noEmit --watch",
    "build": "tsc --noEmit",
    "test": "jest",
    "bundle": "npm run format:write && npm run package",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "local-action": "npx @github/local-action . src/main.ts .env",
    "package": "npx rollup --config rollup.config.js",
    "package:watch": "npm run package -- --watch",
    "all": "npm run format:write && npm run lint && npm run package",
    "prepare": "husky"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@smartesting/lynqa-sdk": "^0.0.4"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@github/local-action": "^5.1.0",
    "@jest/globals": "^30.0.5",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^30.0.5",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "rollup": "^4.46.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "husky": "^9.1.7"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,md,yml,json,mjs}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  }
}
